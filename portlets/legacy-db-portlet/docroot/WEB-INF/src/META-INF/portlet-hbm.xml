<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false" auto-import="false">
	<import class="com.liferay.support.portlet.legacy.model.Book" />
	<class name="com.liferay.support.portlet.legacy.model.impl.BookImpl" table="BookTable">
		<cache usage="read-write" />
		<id name="bookId" type="long">
			<generator class="assigned" />
		</id>
		<property name="bookName" type="com.liferay.portal.dao.orm.hibernate.StringType" />
	</class>
</hibernate-mapping>