<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0"
	metadata-complete="true">

	<jsp-config>
		<taglib>
			<taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
			<taglib-location>/WEB-INF/tld/c.tld</taglib-location>
		</taglib>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<page-encoding>UTF-8</page-encoding>
		</jsp-property-group>
	</jsp-config>

	<listener>
		<display-name>TestListener</display-name>
		<listener-class>com.liferay.trainings.internal.maven.servlet.listener.TestServletContextListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>TestServlet</servlet-name>
		<servlet-class>com.liferay.trainings.internal.maven.servlet.TestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TestServlet</servlet-name>
		<url-pattern>/view</url-pattern>
	</servlet-mapping>
</web-app>